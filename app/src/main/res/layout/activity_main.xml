<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games"
        android:id="@+id/games_b"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/music_b"
        android:layout_alignRight="@+id/music_b"
        android:layout_alignEnd="@+id/music_b" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/music_b"
        android:paddingRight="120dp"
        android:paddingLeft="120dp"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:id="@+id/demo_b"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_above="@+id/sleep_b"
        android:layout_alignLeft="@+id/music_b"
        android:layout_alignStart="@+id/music_b" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep"
        android:id="@+id/sleep_b"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
